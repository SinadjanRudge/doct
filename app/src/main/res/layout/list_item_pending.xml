<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="379dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/IDtext"
            android:layout_width="41dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="10dp"
            android:text="ID :"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@+id/IDtext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Name :"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/purposetext"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/nametext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="Purpose :"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_below="@+id/purposetext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/calendar"
            app:tint="@android:color/black" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/calendar"
            android:text="TextView"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/baseline_access_time_24"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/appointment_date"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/baseline_access_time_24"
            android:text="TextView" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purposetext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="126dp"
            android:backgroundTint="@color/green"
            android:text="Cancel" />

        <Button
            android:id="@+id/reschedule_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purposetext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="126dp"
            android:backgroundTint="@color/green"
            android:text="Reschedule" />

        <TextView
            android:id="@+id/DocumentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="107dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="170dp"
            android:text="TextView ID" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="250dp"
            android:text="TextView Name" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="166dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="181dp"
            android:text="TextView Purpose" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>