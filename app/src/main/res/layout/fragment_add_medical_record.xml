<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_patient_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Medical Records" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add the patient medical records"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="1dp"/>

    <TextView
        android:id="@+id/myTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Illness"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add checkboxes here -->
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tuberculosis" />

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hypertension" />


            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heart dieases" />

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nervous breakdown" />

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="insomnia" />

            <CheckBox
                android:id="@+id/checkbox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other" />

            <CheckBox
                android:id="@+id/checkbox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/myTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev hospitalization/Operation"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="5sp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/myTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family History"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="99dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add checkboxes here -->
            <CheckBox
                android:id="@+id/checkbox11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes" />

            <CheckBox
                android:id="@+id/checkbox22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hypertension" />


            <CheckBox
                android:id="@+id/checkbox33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental health disorder" />

            <CheckBox
                android:id="@+id/checkbox44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asthma" />

            <CheckBox
                android:id="@+id/checkbox55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bleeding disorder" />

            <CheckBox
                android:id="@+id/checkbox66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="others" />

            <CheckBox
                android:id="@+id/checkbox77"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/myTextView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OB-gyne History"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/OB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="5sp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Next" />

</LinearLayout>