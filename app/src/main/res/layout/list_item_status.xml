<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="404dp"
        android:layout_height="255dp"
        android:padding="15dp">


        <TextView
            android:id="@+id/purposetext"
            android:layout_width="346dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"

            android:layout_marginStart="25dp"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/calendar"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_below="@+id/purposetext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/calendar"
            app:tint="@android:color/black" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/calendar"
            android:text="textView"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/baseline_access_time_24"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/appointment_date"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:layout_below="@+id/purposetext"
            android:layout_marginStart="2dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/baseline_access_time_24"
            android:text="TextView" />

        <TextView
            android:id="@+id/statustext"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_below="@+id/purposetext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="123dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>