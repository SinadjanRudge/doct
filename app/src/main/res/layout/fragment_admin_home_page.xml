<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent">


    <!-- Manage Users -->
    <RelativeLayout
        android:id="@+id/manageUsersLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/btnManageUsers"
            android:layout_width="158dp"
            android:layout_height="165dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_user"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnManageUsers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Manage Users"
            android:textSize="16sp"/>
    </RelativeLayout>

    <!-- View Reports -->
    <RelativeLayout
        android:id="@+id/viewReportsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manageUsersLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/btnViewReports"
            android:layout_width="158dp"
            android:layout_height="165dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/reports"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnViewReports"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="View Reports"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Admin!"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:background="@null"
        android:contentDescription="Logout Button"
        android:src="@drawable/menu" />


</RelativeLayout>

