<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ggreen"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewHealthProfTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Health Professional"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editTextHealthProfName"
        android:layout_width="383dp"
        android:layout_height="57dp"
        android:hint="Health Professional Name"
        android:inputType="text" />

    <TextView
        android:id="@+id/health_professional_update"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@android:color/white"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:padding="16dp"
        android:text="This is a non-editable text"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextHealthProfSpecialty"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:hint="Specialty"
        android:inputType="text" />

    <TextView
        android:id="@+id/health_professional_update_textview"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@android:color/white"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:padding="16dp"
        android:text="This is a non-editable text"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


    <Button
        android:id="@+id/buttonUpdateHealthProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="24dp"/>

</LinearLayout>
